{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/application-schema.json",
  "title": "Application Definition Schema",
  "type": "object",
  "properties": {
    "applications": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "id",
          "name",
          "categories",
          "supported_os",
          "supported_distros",
          "server_compatible",
          "install_methods"
        ],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^[a-z0-9\\-]+$"
          },
          "name": {
            "type": "string"
          },
          "categories": {
            "type": "array",
            "items": { "type": "string" }
          },
          "supported_os": {
            "type": "array",
            "items": {
              "enum": ["Linux", "Windows", "macOS"]
            }
          },
          "supported_distros": {
            "type": "array",
            "items": { "type": "string" }
          },
          "server_compatible": {
            "type": "boolean"
          },
          "dependencies": {
            "type": "array",
            "items": { "type": "string" },
            "default": []
          },
          "install_methods": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["type", "package_manager"],
              "properties": {
                "type": {
                  "enum": ["shell_script", "package_manager"]
                },
                "package_manager": {
                  "type": "string"
                },
                "command": {
                  "type": "string"
                },
                "steps": {
                  "type": "array",
                  "items": { "type": "string" }
                },
                "conditions": {
                  "type": "object",
                  "properties": {
                    "os": {
                      "type": "array",
                      "items": { "type": "string" }
                    },
                    "distros": {
                      "type": "array",
                      "items": { "type": "string" }
                    }
                  },
                  "additionalProperties": false
                },
                "notes": {
                  "type": "string"
                },
                "uninstall": {
                  "type": "object",
                  "oneOf": [
                    { "required": ["command"] },
                    { "required": ["steps"] }
                  ],
                  "properties": {
                    "command": {
                      "type": "string"
                    },
                    "steps": {
                      "type": "array",
                      "items": { "type": "string" }
                    }
                  },
                  "additionalProperties": false
                }
              },
              "oneOf": [
                { "required": ["command"] },
                { "required": ["steps"] }
              ],
              "additionalProperties": false
            }
          }
        },
        "additionalProperties": false
      }
    }
  },
  "required": ["applications"],
  "additionalProperties": false
}
