#!/bin/bash
set -euo pipefail

CARGO_TOML="${CARGO_TOML:-Cargo.toml}"
VERSION_FILE="VERSION"

usage() {
  echo "Usage:"
  echo "  $0                # print version"
  echo "  $0 --set X.Y.Z    # set version"
  echo "  $0 --bump patch   # bump patch version"
  echo "  $0 --bump minor   # bump minor version"
  echo "  $0 --bump major   # bump major version"
  exit 1
}

# Prefer [workspace.package], then [package]
get_version() {
  awk '
    BEGIN{ sec=""; }
    /^[[:space:]]*\[[^]]+\][[:space:]]*$/ {
      if ($0 ~ /^[[:space:]]*\[workspace\.package\][[:space:]]*$/) sec="ws";
      else if ($0 ~ /^[[:space:]]*\[package\][[:space:]]*$/) sec="pkg";
      else sec="";
    }
    sec=="ws" && /^[[:space:]]*version[[:space:]]*=/ {
      if (match($0, /"[^"]+"/)) { v=substr($0,RSTART+1,RLENGTH-2); print v; exit 0 }
    }
  ' "$CARGO_TOML" || true

  awk '
    BEGIN{ sec=""; }
    /^[[:space:]]*\[[^]]+\][[:space:]]*$/ {
      if ($0 ~ /^[[:space:]]*\[workspace\.package\][[:space:]]*$/) sec="ws";
      else if ($0 ~ /^[[:space:]]*\[package\][[:space:]]*$/) sec="pkg";
      else sec="";
    }
    sec=="pkg" && /^[[:space:]]*version[[:space:]]*=/ {
      if (match($0, /"[^"]+"/)) { v=substr($0,RSTART+1,RLENGTH-2); print v; exit 0 }
    }
  ' "$CARGO_TOML" || true
}

sync_version_file() {
  local v="$1"
  echo "$v" > "$VERSION_FILE"
}

set_version() {
  local new_version="$1"

  if [[ ! "$new_version" =~ ^v?[0-9]+\.[0-9]+\.[0-9]+$ ]]; then
    echo "Invalid version format. Use vX.Y.Z or X.Y.Z" >&2; exit 1
  fi

  new_version="${new_version#v}"

  local backup="${CARGO_TOML}.bak"
  [[ -f "$backup" ]] || cp "$CARGO_TOML" "$backup"

  # Try workspace.package
  local tmp
  tmp="$(mktemp)"
  if awk -v new="$new_version" '
    BEGIN{ sec=""; replaced=0 }
    /^[[:space:]]*\[[^]]+\]/ {
      if ($0 ~ /^\s*\[workspace\.package\]/) sec="ws";
      else if ($0 ~ /^\s*\[package\]/) sec="pkg";
      else sec="";
      print; next
    }
    sec=="ws" && !replaced && /^\s*version\s*=/ {
      match($0, /^[ \t]*/); indent=substr($0,1,RLENGTH);
      p1=index($0,"\"");
      if (p1>0) { rest=substr($0,p1+1); p2=index(rest,"\"") } else p2=0
      if (p1>0 && p2>0) {
        suffix=substr($0,p1+p2+1);
        print indent "version = \"" new "\"" suffix;
        replaced=1; next
      }
    }
    { print }
    END{ if(!replaced) exit 2 }
  ' "$CARGO_TOML" > "$tmp"; then
    mv "$tmp" "$CARGO_TOML"
    echo "Version updated in [workspace.package] to $new_version"
    sync_version_file "$new_version"
    echo "VERSION file synced to $new_version"
    return 0
  else
    local rc=$?
    rm -f "$tmp"
    [[ $rc -ne 2 ]] && { echo "Failed updating workspace version"; exit 1; }
  fi

  # Try [package]
  tmp="$(mktemp)"
  if awk -v new="$new_version" '
    BEGIN{ sec=""; replaced=0 }
    /^[[:space:]]*\[[^]]+\]/ {
      if ($0 ~ /^\s*\[workspace\.package\]/) sec="ws";
      else if ($0 ~ /^\s*\[package\]/) sec="pkg";
      else sec="";
      print; next
    }
    sec=="pkg" && !replaced && /^\s*version\s*=/ {
      match($0, /^[ \t]*/); indent=substr($0,1,RLENGTH);
      p1=index($0,"\"");
      if (p1>0) { rest=substr($0,p1+1); p2=index(rest,"\"") } else p2=0
      if (p1>0 && p2>0) {
        suffix=substr($0,p1+p2+1);
        print indent "version = \"" new "\"" suffix;
        replaced=1; next
      }
    }
    { print }
    END{ if(!replaced) exit 2 }
  ' "$CARGO_TOML" > "$tmp"; then
    mv "$tmp" "$CARGO_TOML"
    echo "Version updated in [package] to $new_version"
    sync_version_file "$new_version"
    echo "VERSION file synced to $new_version"
  else
    echo "Failed to set version: no version field found."
    exit 1
  fi
}

bump_version() {
  local kind="$1"
  local v
  v="$(get_version)"

  if [[ -z "$v" ]]; then
    echo "Unable to read version from Cargo.toml" >&2
    exit 1
  fi

  IFS='.' read -r major minor patch <<< "$v"

  case "$kind" in
    patch) patch=$((patch+1)) ;;
    minor) minor=$((minor+1)); patch=0 ;;
    major) major=$((major+1)); minor=0; patch=0 ;;
    *) echo "Unknown bump kind: $kind"; exit 1 ;;
  esac

  local new_version="${major}.${minor}.${patch}"
  set_version "$new_version"
}

# Ensure VERSION file never diverges when printing version
print_and_sync_version() {
  local v cargo_v

  cargo_v="$(get_version)"

  if [[ -z "$cargo_v" ]]; then
    echo "Version not found under [workspace.package] or [package]" >&2
    exit 1
  fi

  if [[ -f "$VERSION_FILE" ]]; then
    v="$(cat "$VERSION_FILE")"
    if [[ "$v" != "$cargo_v" ]]; then
      echo "VERSION file out of sync â€” fixing."
      sync_version_file "$cargo_v"
    fi
  else
    sync_version_file "$cargo_v"
  fi

  echo "$cargo_v"
}

case "${1-}" in
  --set)
    [[ -n "${2-}" ]] || usage
    set_version "$2"
    ;;
  --bump)
    [[ -n "${2-}" ]] || usage
    bump_version "$2"
    ;;
  "" )
    print_and_sync_version
    ;;
  * )
    usage
    ;;
esac
